# Source custom i3 workspace commands
exec --no-startup-id /


# Startup applications
#exec --no-startup-id urxvtd
exec --no-startup-id emacs --daemon

# Additional monitors
#exec --no-startup-id xrandr --output VGA1 --auto --left-of LVDS1
exec --no-startup-id xrandr --output VGA1 --auto --right-of LVDS1 --rotate left
exec --no-startup-id xrandr --output HDMI1 --mode 3440x1440 --right-of LVDS1

# Set background image
exec --no-startup-id feh --bg-fill /home/oliver/Pictures/space-bg.png
bindsym $mod b exec --no-startup-id feh --bg-fill /home/oliver/Pictures/space-bg.png

# Set modifier key
# Mod1 = Alt
# Mod4 = Windows
set $mod Mod1
#set $mod Mod4

# No shortcut mode
set $mode_off i3 Shortcuts Disabled (c-a-s-Esc to exit)
bindsym $mod+Control+Shift+Escape mode "$mode_off"
mode "$mode_off" {
    bindsym $mod+Control+Shift+Escape mode "default"
}

# LAUNCH MODE #
set $mode_launcher Launch: [e]macs [f]irefox [j]ulia [k]eepass [p]idgin [t]hunderbird [z]otero
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym e exec emacs, mode "default"
    bindsym f exec firefox, mode "default"
    bindsym j exec 'mate-terminal -- julia', mode "default"
    bindsym k exec keepass, mode "default"
    bindsym p exec pidgin, mode "default"
    bindsym t exec thunderbird, mode "default"
    bindsym z exec zotero, mode "default"
    
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# EXIT MODE #
# https://faq.i3wm.org/question/239/how-do-i-suspendlockscreen-and-logout.1.html
bindsym $mod+Shift+e mode "$mode_exit"
set $mode_exit System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_exit" {
    bindsym l exec --no-startup-id 'i3lock-fancy', mode "default"
    bindsym e exec --no-startup-id 'i3-msg exit', mode "default"
    bindsym s exec --no-startup-id 'i3lock-fancy & systemctl suspend', mode "default"
    bindsym h exec --no-startup-id 'i3lock-fancy & systemctl hibernate', mode "default"
    bindsym r exec --no-startup-id 'systemctl reboot', mode "default"
    bindsym Shift+s exec --no-startup-id 'systemctl poweroff', mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# DISCONNECT MODE #
bindsym $mod+Shift+d mode "$mode_disconnect"
set $mode_disconnect Disconnect monitor: [H]DMI1 [V]GA1
mode "$mode_disconnect" {
	
	bindsym h exec --no-startup-id xrandr --output HDMI1 --off, mode "default"
	bindsym v exec --no-startup-id xrandr --output VGA1 --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# CONNECT MODE #
bindsym $mod+Shift+c mode "$mode_connect"
set $mode_connect Connect monitor: [H]DMI1 [V]GA1 -- [M]irror Toggle (off)
mode "$mode_connect" {
	
	bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --rotate left --right-of LVDS1, mode "default"
	#bindsym h exec --no-startup-id xrandr --output HDMI1 --mode 3440x1440 --right-of LVDS1, mode "default"
	bindsym v exec --no-startup-id xrandr --output VGA1 --auto --left-of LVDS1, mode "default"
	#bindsym v exec --no-startup-id xrandr --output VGA1 --mode 1600x900 --right-of LVDS1 --rotate left, mode "default"
    bindsym m mode "$mode_mirror"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# MIRROR MODE #
set $mode_mirror Connect monitor: [H]DMI1 [V]GA1 -- [M]irror Toggle (on)
mode "$mode_mirror" {
	
	bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --same-as LVDS1, mode "default"
	bindsym v exec --no-startup-id xrandr --output VGA1 --auto --same-as LVDS1, mode "default"
    bindsym m mode "$mode_connect"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# MOD MODE #
bindsym $mod+Shift+o mode "$mode_mod"
set $mode_mod Set Modifier Key: [a]lt [w]indows
mode "$mode_mod" {
	bindsym a set $mod Mod1, mode "default"
	bindsym w set $mod Mod4, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# AUDIO MODE #
# https://www.reddit.com/r/i3wm/comments/2a1zru/some_useful_i3_mode_menus/
set $audiomenu "volume:  [+]10%  [-]10%  [m]ute  [r]eset"
bindsym $mod+F12         mode $audiomenu

mode $audiomenu {
    bindsym r             exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- 100%
    bindsym plus          exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
    bindsym KP_Add        exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- +10%
    bindsym minus         exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym KP_Subtract   exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -- -10%
    bindsym m             exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym Return        mode "default"
    bindsym Escape        mode "default"
}

